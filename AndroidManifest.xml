<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marengga.whizzle"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0.5">
    
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:supportsRtl="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LiveoActionBarTheme"
        android:name="com.marengga.whizzle.app.AppController">
        <activity
            android:name="com.marengga.whizzle.fragments.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marengga.whizzle.navigation.NavigationMain"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.marengga.whizzle.fragments.ChatActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.marengga.whizzle.navigation.NavigationMain" >
	        <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.marengga.whizzle.navigation.NavigationMain" />
        </activity>
        <activity
            android:name="com.marengga.whizzle.fragments.TeamActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.marengga.whizzle.navigation.NavigationMain" >
	        <!-- Parent activity meta-data to support 4.0 and lower -->
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.marengga.whizzle.navigation.NavigationMain" />
        </activity>
        <activity
            android:name="com.marengga.whizzle.fragments.PinboardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.marengga.whizzle.fragments.TeamMemberActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
